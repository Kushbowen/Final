<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EaseTrip"
        tools:targetApi="31">
        <activity
            android:name=".AddFlightsActivity"
            android:exported="false"
            android:label="@string/title_activity_add_flights"
            android:theme="@style/Theme.EaseTrip" />
        <activity
            android:name=".ViewFlightsActivity"
            android:exported="false"
            android:label="@string/title_activity_view_flights"
            android:theme="@style/Theme.EaseTrip" />
        <activity
            android:name=".InsertActivity"
            android:exported="false"
            android:label="@string/title_activity_insert"
            android:theme="@style/Theme.EaseTrip" />
        <activity
            android:name=".DetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.EaseTrip" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EaseTrip">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>